mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Traffic Management System"

[[workflows.workflow]]
name = "Traffic Management System"
author = "agent"

[[workflows.workflow.tasks]]
